<assembly>
    <id>${project.version}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${app.finalName}-${project.version}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${javafx.deploy.deployOutputDirectory}/${javafx.deploy.applicationName}</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>app/license.txt</exclude>
                <exclude>app/readme.txt</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${javafx.deploy.deployOutputDirectory}/${javafx.deploy.applicationName}/app</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>license.txt</include>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>